<script type="text/javascript">
  let checkInTime, checkOutTime, breakStartTime, breakEndTime;
  let activeSessionTimer, breakSessionTimer;

  const currentTime = new Date();
  const timeDifference = (currentTime - checkInTime) / (1000 * 60 * 60);
  if (timeDifference > 4) {
    alert('Check-in time is greater than 8 hours!');
  }

  // Update active session timer
  function startTimer() {
    if (!checkInTime) return;

    const now = new Date();
    const elapsed = now - checkInTime;
    const hours = Math.floor(elapsed / (1000 * 60 * 60));
    const minutes = Math.floor((elapsed % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((elapsed % (1000 * 60)) / 1000);

    document.getElementById('active-session-time').textContent =
      `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
      
    activeSessionTimer = setTimeout(startTimer, 1000);
  }

  function stopTimer() {
    clearTimeout(activeSessionTimer);
    document.getElementById('active-session-time').textContent = "00:00:00";
  }

  // Update break session timer
  function updateBreakSessionTimer() {
    if (breakStartTime) {
      const now = new Date();
      const elapsed = now - breakStartTime;
      const hours = Math.floor(elapsed / (1000 * 60 * 60));
      const minutes = Math.floor((elapsed % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((elapsed % (1000 * 60)) / 1000);

      document.getElementById('break-session-time').textContent =
        `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
      
      breakSessionTimer = setTimeout(updateBreakSessionTimer, 1000);
    }
  }

  function stopBreakTimer() {
    clearTimeout(breakSessionTimer);
    document.getElementById('break-session-time').textContent = "00:00:00";
  }

  // Check-in button click
  document.getElementById('check-in-btn').addEventListener('click', () => {
    document.getElementById('check-in-btn').style.display = 'none';
    document.getElementById('check-out-btn').style.display = 'block';
    document.getElementById('break-btn').style.display = 'block';

    checkInTime = new Date();
    sessionStorage.setItem('checkInTime', checkInTime.getTime());
    document.getElementById('hidden-check-in').value = checkInTime.toISOString();

    startTimer();
    document.getElementById('user-log-form').submit();
  });

  // Check-out button click
  document.getElementById('check-out-btn').addEventListener('click', () => {
    const currentTime = new Date();
    const timeDifference = (currentTime - checkInTime) / (1000 * 60 * 60); // Convert time difference to hours

    if (timeDifference < 8) {
      alert('Check-in time is less than 8 hours!');
      <%# return;  %>
    }

    document.getElementById('check-out-btn').style.display = 'none';
    document.getElementById('check-in-btn').style.display = 'block';
    document.getElementById('break-btn').style.display = 'none';

    checkOutTime = new Date();
    sessionStorage.removeItem('checkInTime');
    document.getElementById('hidden-check-out').value = checkOutTime.toISOString();

    stopTimer();
    document.getElementById('user-log-form').submit();
  });

  // Break button click
  document.getElementById('break-btn').addEventListener('click', () => {
    document.getElementById('break-btn').style.display = 'none';
    document.getElementById('end-break-btn').style.display = 'block';
    document.querySelector('.active-session').style.display = 'none';

    breakStartTime = new Date();
    sessionStorage.setItem('breakStartTime', breakStartTime.getTime());
    document.getElementById('hidden-break_start-time').value = breakStartTime.toISOString();

    stopTimer();
    updateBreakSessionTimer();
    document.getElementById('user-break-form').submit();
  });

  // End break button click
  document.getElementById('end-break-btn').addEventListener('click', () => {
    document.getElementById('break-btn').style.display = 'block';
    document.getElementById('end-break-btn').style.display = 'none';
    document.querySelector('.active-session').style.display = 'block';

    breakEndTime = new Date();
    sessionStorage.removeItem('breakStartTime');
    stopBreakTimer();
    document.getElementById('hidden-break_end-time').value = breakEndTime.toISOString();

    startTimer();
    document.getElementById('user-break-form').submit();
  });

  // On page load, restore state
  document.addEventListener('DOMContentLoaded', () => {
    const storedCheckInTime = sessionStorage.getItem('checkInTime');
    const storedBreakStartTime = sessionStorage.getItem('breakStartTime');

    if (storedCheckInTime) {
      document.getElementById('check-in-btn').style.display = 'none';
      document.getElementById('check-out-btn').style.display = 'block';
      document.getElementById('break-btn').style.display = 'block';

      checkInTime = new Date(parseInt(storedCheckInTime));
      startTimer();

    }

    if (storedBreakStartTime) {
      document.getElementById('break-btn').style.display = 'none';
      document.getElementById('end-break-btn').style.display = 'block';
      document.querySelector('.active-session').style.display = 'none';

      breakStartTime = new Date(parseInt(storedBreakStartTime));
      updateBreakSessionTimer();
    }
  });
</script>


