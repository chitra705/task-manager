<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
      
      document.querySelectorAll('.edit-button').forEach(button => {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          const logId = button.dataset.id;
          const userLogData = JSON.parse(button.dataset.logData);
          document.getElementById('edit-log-id').value = logId;
          document.getElementById('edit-login-time').value = userLogData.login_time;
          document.getElementById('edit-logout-time').value = userLogData.logout_time;

          const form = document.getElementById('edit-form');
          form.action = `/user_logs/${logId}`;

          if (!document.getElementById('csrf-token-field')) {
            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = 'authenticity_token';
            csrfInput.value = csrfToken;
            csrfInput.id = 'csrf-token-field';
            form.appendChild(csrfInput);
          }

          $('#editModal').modal('show');
        });
      });
    });

  </script>
</head>
<body>

  <% if @user_logs_mnth.present? %>
    <div class="container mt-5" style="padding-bottom: 230px;">
      <h4 class="mb-4 text-center" style="font-weight: bolder;">USER LOGS</h4>
      <div class="table-responsive" style="padding-top: 50px;">
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">ID</th>
              <th class="text-center">Log Date</th>
              <th class="text-center">Login Time</th>
              <th class="text-center">Logout Time</th>
              <th class="text-center">Action</th>
            </tr>
          </thead>
          <tbody>
            <% @user_logs_mnth.each do |u| %>
              <tr>
                <td class="text-center"><%= u.user.present? ? u.user.name : 'No User' %></td>
                <td class="text-center"><%= u.user_id %></td>
                <td class="text-center"><%= u.log_date %></td>
                <td class="text-center"><%= u.login_time.strftime("%H:%M:%S") if u.login_time %></td>
                <td class="text-center"><%= u.logout_time.strftime("%H:%M:%S") if u.logout_time %></td>
                <td>
                  <%= link_to 'Edit', '#', class: 'btn btn-success btn-sm edit-button', data: { 
                      id: u.id, 
                      log_data: { login_time: u.login_time, logout_time: u.logout_time }.to_json 
                  } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="mb-4" style= "text-align: center; padding: 35px;">
      <%= image_tag 'ety.png', alt: 'otp', class: 'img-fluid rotate-on-hover', style: 'height: 460px;' %>
    </div>
  <% end %>

  <!-- Edit Modal -->
  <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Edit User Log</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= form_with(url: '', method: :patch, local: true, id: 'edit-form') do |form| %>
            <%= hidden_field_tag :id, nil, id: 'edit-log-id' %>
            <div class="form-group">
              <%= form.label :login_time %>
              <%= form.time_field :login_time, id: 'edit-login-time', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :logout_time %>
              <%= form.time_field :logout_time, id: 'edit-logout-time', class: 'form-control' %>
            </div>
            <div class="modal-footer">
              <%= form.submit 'Update', class: 'btn btn-primary' %>
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

</body>
</html>
